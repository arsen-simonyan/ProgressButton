<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <am.newway.progressbutton.ProgressButton
        android:id="@+id/progress_button1"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginHorizontal="6dp"
        android:layout_marginTop="24dp"
        app:accentColor="@color/accent_color"
        app:basicColor="@color/basic_color"
        app:cornerRadius="36dp"
        app:finishState="basicState"
        app:font="@style/StyleVariant1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeWidth="3dp"
        app:text="¯\_(ツ)_/¯"
        app:textSize="20sp" />

    <am.newway.progressbutton.ProgressButton
        android:id="@+id/progress_button2"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginHorizontal="6dp"
        android:layout_marginTop="24dp"
        app:accentColor="@android:color/holo_orange_dark"
        app:basicColor="@android:color/holo_blue_light"
        app:cornerRadius="14dp"
        app:finishState="basicState"
        app:font="@style/StyleVariant2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progress_button1"
        app:strokeWidth="6dp"
        app:textSize="20sp" />

    <am.newway.progressbutton.ProgressButton
        android:id="@+id/progress_button3"
        android:layout_width="260dp"
        android:layout_height="160dp"
        android:layout_marginHorizontal="6dp"
        android:layout_marginTop="24dp"
        app:accentColor="@color/accent_color"
        app:basicColor="@color/basic_color"
        app:cornerRadius="6dp"
        app:finishState="basicState"
        app:font="@style/StyleVariant1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progress_button2"
        app:strokeWidth="2dp"
        app:text="PB"
        app:textSize="38sp" />

</androidx.constraintlayout.widget.ConstraintLayout>